{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build/",
    "baseUrl": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest"]
  },
  "exclude": [
    "./src/tests/",
    "./node_modules/",
    "./build/"
  ],
  "include": [
    "src/**/*",
  ]
}